<resources>

    <style name="Theme.MadNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/metallic_seaweed</item>
        <item name="colorOnPrimary">@color/onyx</item>
        <item name="colorSecondary">@color/metallic_seaweed</item>
        <item name="colorOnSecondary">@color/onyx</item>
        <item name="android:statusBarColor">@color/dark_gray</item>
        <item name="android:navigationBarColor">@color/dark_gray</item>
        <item name="android:textColor">@color/mercury</item>
        <item name="android:scrollbars">none</item>
        <item name="fontFamily">@font/blogger_sans_bold</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <item name="colorControlActivated">@color/mercury</item>
        <item name="colorSwitchThumbNormal">@color/spanish_gray</item>
        <item name="radioButtonStyle">@style/RadioButtonStyle</item>
        <item name="checkboxStyle">@style/CheckBoxStyle</item>
    </style>

    <style name="MadCalendarGridStyle">
        <item name="mad_gridColor">@color/dark_liver</item>
        <item name="mad_daysOfWeekTitleColor">@color/mercury</item>
        <item name="mad_dayTitleTextSize">14sp</item>
        <item name="mad_daysOfWeekTitleTextSize">14sp</item>
        <item name="mad_selectedDayColor">@color/dark_liver</item>
        <item name="mad_currentDayColor">@color/metallic_seaweed</item>
        <item name="mad_currentDayTitleColor">@color/onyx</item>
        <item name="mad_eventTextSize">11sp</item>
        <item name="mad_eventTitleLightColor">@color/mercury</item>
        <item name="mad_eventTitleDarkColor">@color/onyx</item>
        <item name="mad_currentMonthDaysColor">@color/mercury</item>
        <item name="mad_otherMonthDaysColor">@color/gray</item>
    </style>

    <style name="MadCalendarViewStyle">
        <item name="mad_monthStyle">@style/MadCalendarGridStyle</item>
        <item name="mad_changeMonthButtonsColor">@color/mercury</item>
        <item name="mad_monthYearTitleColor">@color/mercury</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheetDialog</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="backgroundTint">@color/dark_gray</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/CustomToolbarStyle</item>
    </style>

    <style name="CustomToolbarStyle">
        <item name="fontFamily">@font/blogger_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="iconTint">@color/mercury</item>
        <item name="colorOnPrimary">@color/mercury</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/CustomBottomNavigationView</item>
    </style>

    <style name="CustomBottomNavigationView">
        <item name="colorPrimary">@color/dark_gray</item>
        <item name="elevation">10dp</item>
        <item name="itemIconTint">@color/bottom_menu_color_selector</item>
        <item name="itemIconSize">30dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>

</resources>
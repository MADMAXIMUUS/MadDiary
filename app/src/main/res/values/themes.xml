<resources>

    <style name="Theme.MadNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/metallic_seaweed</item>
        <item name="colorOnPrimary">@color/dawn_pink</item>
        <item name="colorSecondary">@color/metallic_seaweed</item>
        <item name="colorOnSecondary">@color/dawn_pink</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/CustomToolbarStyle</item>
    </style>

    <style name="CustomToolbarStyle" >
        <item name="fontFamily">@font/blogger_sans_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="colorPrimary">@color/white</item>
        <item name="elevation">10dp</item>
        <item name="android:textColor">@color/metallic_seaweed</item>
        <item name="android:textColorPrimary">@color/metallic_seaweed</item>
        <item name="android:textColorSecondary">@color/metallic_seaweed</item>
        <item name="colorControlNormal">@color/metallic_seaweed</item>
    </style>

    <style name="ShapeAppearance.BottomNavigationView.RoundedCorners" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>
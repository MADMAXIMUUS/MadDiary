<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ReminderBlockTitleTextView">
        <item name="android:fontFamily">@font/blogger_sans_bold</item>
        <item name="android:textColor">@color/grey_chateau</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ReminderBlockBigTitleTextView">
        <item name="android:fontFamily">@font/blogger_sans_bold</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="ReminderCardStyle">
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ReminderOpenMenuIcon">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:rotation">90</item>
        <item name="android:src">@drawable/ic_open_menu</item>
        <item name="android:tint">@color/grey_chateau</item>
    </style>

    <style name="ButtonIconColor">
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ReminderBlockContentTextView">
        <item name="android:fontFamily">@font/blogger_sans_bold</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ReminderBigBlockTitleTextView">
        <item name="android:fontFamily">@font/blogger_sans_bold</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="CircleBetweenDateAndTime">
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:tint">@color/onyx</item>
    </style>

    <style name="TitleEditText">
        <item name="android:fontFamily">@font/blogger_sans_bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/grey_chateau</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textColor">@color/onyx</item>
    </style>

    <style name="CustomCalendarMonth" parent="Theme.MadNotes">
        <item name="android:textColorPrimary">@color/onyx</item>
        <item name="fontFamily">@font/blogger_sans_bold</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/selector_calendar_color</item>
        <item name="android:weekNumberColor">@color/grey_chateau</item>
        <item name="fontFamily">@font/blogger_sans_bold</item>
    </style>

    <style name="CustomCalendarWeek" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/grey_chateau</item>
        <item name="fontFamily">@font/blogger_sans_bold</item>
    </style>

    <style name="BottomSheetHandle">
        <item name="android:background">@drawable/bottom_sheet_handle</item>
        <item name="android:backgroundTint">@color/dark_liver</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TimePickerStyle" parent="Theme.MadNotes">
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:fontFamily">@font/blogger_sans_bold</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="TimePickerDivider">
        <item name="android:textColor">@color/onyx</item>
        <item name="fontFamily">@font/blogger_sans_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
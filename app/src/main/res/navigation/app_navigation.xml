<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/bottom_notes">
    <fragment
        android:id="@+id/bottom_notes"
        android:name="ru.madmax.madnotes.presentation.list_note.ListNoteFragment"
        android:label="MadNotes"
        tools:layout="@layout/fragment_list_note">
        <action
            android:id="@+id/action_bottom_notes_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_bottom_notes_to_createNoteFragment"
            app:destination="@id/createNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/createNoteFragment"
        android:label="Note edit"
        android:name="ru.madmax.madnotes.presentation.create_note.CreateAndEditNoteFragment"
        tools:layout="@layout/fragment_create_and_edit_note" />
    <fragment
        android:id="@+id/bottom_categories"
        android:name="ru.madmax.madnotes.presentation.list_category.ListCategoryFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_list_category">
        <action
            android:id="@+id/action_bottom_categories_to_createCategoryFragment"
            app:destination="@id/createCategoryFragment" />
        <action
            android:id="@+id/action_bottom_categories_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/createCategoryFragment"
        android:label="Categories edit"
        android:name="ru.madmax.madnotes.presentation.create_category.CreateCategoryFragment"
        tools:layout="@layout/fragment_create_and_edit_category" />
    <fragment
        android:id="@+id/bottom_reminders"
        android:name="ru.madmax.madnotes.presentation.list_reminder.ListReminderFragment"
        android:label="Reminders"
        tools:layout="@layout/fragment_list_reminder">
        <action
            android:id="@+id/action_bottom_reminders_to_createReminderFragment"
            app:destination="@id/createReminderFragment" />
        <action
            android:id="@+id/action_bottom_reminders_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/createReminderFragment"
        android:name="ru.madmax.madnotes.presentation.create_reminder.CreateReminderFragment"
        android:label="Reminders edit"
        tools:layout="@layout/fragment_create_and_edit_reminder" />
    <fragment
        android:id="@+id/bottom_settings"
        android:name="ru.madmax.madnotes.presentation.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="ru.madmax.madnotes.presentation.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search"/>
</navigation>
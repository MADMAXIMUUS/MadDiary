<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="1000">
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@+id/scrollView2"
            motion:touchAnchorSide="top" />
        <KeyFrameSet >
            <KeyAttribute
                motion:motionTarget="@+id/create_and_edit_event_delete_cover_button"
                motion:framePosition="50"
                android:scaleX="0" />
            <KeyAttribute
                motion:motionTarget="@+id/create_and_edit_event_delete_cover_button"
                motion:framePosition="50"
                android:scaleY="0" />
        </KeyFrameSet>

    </Transition>

    <ConstraintSet android:id="@+id/start" >
        <Constraint
            android:id="@+id/create_and_edit_event_delete_cover_button"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:scaleX="1"
            android:scaleY="1" />
    </ConstraintSet>
    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/motion_head"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">

            <PropertySet motion:visibilityMode="ignore" />

        </Constraint>

        <Constraint
            android:id="@+id/create_and_edit_event_cover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:visibility="invisible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/create_and_edit_event_delete_cover_button"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            android:scaleX="0"
            android:scaleY="0" />
    </ConstraintSet>

</MotionScene>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="60dp"
    tools:context="ru.lopata.madDiary.featureReminders.presentation.bottomsheet.BottomSheetCreateReminderFragment">

    <TextView
        android:id="@+id/bottom_sheet_create_reminder_title"
        style="@style/ReminderBlockBigTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/bottom_sheet_create_reminder_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_create_reminder_title">

        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_sheet_create_reminder_event_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            app:cardBackgroundColor="@color/metallic_seaweed"
            app:cardCornerRadius="10dp">

            <ImageView
                style="@style/ButtonIconColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Add reminder"
                android:src="@drawable/ic_add_event" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_sheet_create_reminder_task_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            app:cardBackgroundColor="@color/metallic_seaweed"
            app:cardCornerRadius="10dp">

            <ImageView
                style="@style/ButtonIconColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Add reminder"
                android:src="@drawable/ic_add_task" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_sheet_create_reminder_reminder_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:adjustViewBounds="true"
            app:cardBackgroundColor="@color/metallic_seaweed"
            app:cardCornerRadius="10dp">

            <ImageView
                style="@style/ButtonIconColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Add reminder"
                android:src="@drawable/ic_add_reminder" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
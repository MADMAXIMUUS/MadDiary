<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".featureReminders.presentation.dialogs.bottomSheet.attachLayouts.AttachImageFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/bottom_sheet_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_sheet_permission_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="200dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="@string/permission_not_granted"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/bottom_sheet_rv"
        app:layout_constraintStart_toStartOf="@id/bottom_sheet_rv"
        app:layout_constraintTop_toTopOf="@id/bottom_sheet_rv"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
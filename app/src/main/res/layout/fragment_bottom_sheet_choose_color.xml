<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="50dp"
    tools:context=".featureReminders.presentation.dialogs.bottomsheet.BottomSheetChooseColorFragment">

    <TextView
        android:id="@+id/bottom_sheet_create_reminder_title"
        style="@style/DialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="@string/bottom_sheet_create_reminder_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/bottom_sheet_choose_color_rb_root"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bottom_sheet_create_reminder_title">

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bottom_sheet_choose_color_default"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/rb_selector"
            android:backgroundTint="@color/metallic_seaweed"
            android:button="@null"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bottom_sheet_choose_color_yellow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/rb_selector"
            android:backgroundTint="@color/orange"
            android:button="@null"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bottom_sheet_choose_color_green"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/rb_selector"
            android:backgroundTint="@color/green"
            android:button="@null"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bottom_sheet_choose_color_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/rb_selector"
            android:backgroundTint="@color/blue"
            android:button="@null"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/bottom_sheet_choose_color_purple"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/rb_selector"
            android:backgroundTint="@color/purple"
            android:button="@null"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/bottom_sheet_choose_color_pink"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:background="@drawable/rb_selector"
            android:backgroundTint="@color/red"
            android:button="@null"
            tools:ignore="TouchTargetSizeCheck" />

        <!--<View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

        <androidx.cardview.widget.CardView
            android:id="@+id/bottom_sheet_choose_color_custom_color"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            app:cardCornerRadius="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_color_circle"
                tools:ignore="ContentDescription" />

        </androidx.cardview.widget.CardView>-->

        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>